// Global
// ======
body
    margin 0
    padding 0
    min-width 768px


// Main
// ====
header
    absolute top left
    width 100%
    height 60px
    z-index 10

#container
    absolute top 60px bottom 80px
    padding 10px 0
    width 100%
    z-index 100
    box-shadow 0 0 5px #000

footer
    absolute bottom left
    width 100%
    height 80px
    z-index 0


// Class
// =====
.content
    margin 5px 10px
    word-wrap break-word

.nickname
    margin auto 0.5em
    font-weight bold


// Components
// ==========
#title
    margin 10px
    line-height 40px
    font-size 40px
    font-weight bold
    color #FFF

#input-nickname, #btn-nickname
    margin 10px 10px 10px 0

#board
    height 100%
    margin 0 20px
    box-shadow inset 2px 2px 1px #808080, inset -2px -2px #d3d3d3
    overflow auto
    border-radius 10px

#footer-wrapper
    margin 10px 20px
    height 50px
    padding 5px
    box-shadow inset 2px 2px 1px #808080, inset -2px -2px #d3d3d3
    border-radius 10px

#message
    margin 0
    border 0
    padding 0
    width 100%
    height 100%
    line-height 16px
    font-size 14px
    resize none
