/* Global 
------------------------------- */
body 
    margin 0
    padding 0


/* Main 
------------------------------- */
header 
    absolute top left
    width 100%
    height 60px


#container 
    absolute top 60px bottom 80px
    width 100%


footer 
    absolute bottom left
    width 100%
    height 80px


/* Class 
------------------------------- */
.content 
    margin 5px 10px
    word-wrap break-word


/* Components 
------------------------------- */
#title 
    margin 10px
    line-height 40px
    font-size 40px
    font-weight bold


#board 
    height 100%
    margin 0 10px
    box-shadow inset 2px 2px 1px #808080, inset -2px -2px #d3d3d3
    overflow auto


#footer-wrapper 
    margin 10px
    height 50px
    padding 5px
    box-shadow inset 2px 2px 1px #808080, inset -2px -2px #d3d3d3


#message 
    margin 0
    border 0
    padding 0
    width 100%
    height 100%
    resize none
