!!!
html(lang="en")
  head
    title= name
    meta(charset="utf-8")

    link(rel='shortcut icon', type='image/x-icon', href='/favicon.ico')

    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/flat-ui.css')
    link(rel='stylesheet', href='/css/chat.css')

    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.10.1/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/1.4.5/jquery.scrollTo.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.3.1/jquery.cookie.min.js")

    script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.0.0/backbone-min.js")

    script(src="/socket.io/socket.io.js")

  body
    header
      .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          .container-fluid
            #title.nav= name
            .nav.pull-right
              form.navbar-form.pull-left
                input#input-nickname.span3.search-query(type="text", placeholder="Nickname")
                button#btn-nickname.btn.btn-primary(type="submit") Set Nickname

    #container.container-fluid
      #board
        #boardend

    footer
      #input
        #footer-wrapper
          textarea#message

    script(src="/js/chat.js")
