html(lang="en")
  head
    title= name
    
    // Loading Bootstrap 
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/css/bootstrap-responsive.min.css')

    // Loading Flat UI
    link(rel='stylesheet', href='/css/flat-ui.css')

    // Loading default style 
    link(rel='stylesheet', href='/css/chat.css')

    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.10.1/jquery.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-scrollTo/1.4.5/jquery.scrollTo.min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.3.1/jquery.cookie.min.js")

    script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/backbone.js/1.0.0/backbone-min.js")
    script(src="/socket.io/socket.io.js")

  body
    header
      // navbar
      .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          .container
            .nav-collapse.collapse
              ul.nav
                li
                  a(href="#")= name
                li.active
                  a(href="#") optionButton
                  ul
                    li
                      a(href="#") option 1
                    li
                      a(href="#") option 2
                    li
                      a(href="#") option 3
              ul.nav.pull-right
                li.dropdown
                  button.btn.dropdown-toggle.clearfix.btn-primary.select(href="#", data-toggle="dropdown") optionButton
                    span.caret(style="border-top-color: #fff;border-bottom-color: #fff;")
                  ul.dropdown-menu(role="menu", style="top: 80%")
                    li
                      a(href="#") option 1
                    li
                      a(href="#") option 2
                    li
                      a(href="#") option 3
      // / navbar
    #container
      #board
        #boardend

    footer
      #input
        #footer-wrapper
          textarea#message

    

    // These two are used to support touch screen
      script(src="/js/jquery-ui-1.10.3.custom.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/jqueryui-touch-punch/0.2.2/jquery.ui.touch-punch.min.js")
    
    script(src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.2/js/bootstrap.min.js")

    // Adds select effect
    script(src="/js/bootstrap-select.js")

    // Adds tooltip effect
    script(src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/1.3/bootstrapSwitch.min.js")

    // Adds checkbox effect
    script(src="/js/flatui-checkbox.js")

    // Adds radio effect
    script(src="/js/flatui-radio.js")

    // Adds tags effect
    script(src="/js/jquery.tagsinput.js")

    // Adds switch effect 
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery-placeholder/2.0.7/jquery.placeholder.min.js")

    // Adds video play effect
    script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.2/html5shiv.js")

    script(src="/js/application.js")
    script(src="/js/chat.js")
